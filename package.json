{
  "name": "franklin-site-status",
  "version": "1.0.10",
  "description": "",
  "scripts": {
    "build:docker:server": "docker build -f server/Dockerfile -t franklin-site-status-server:$npm_package_version .",
    "build:docker:audit-worker": "docker build -f audit-worker/Dockerfile -t franklin-site-status-audit-worker:$npm_package_version .",
    "build:docker:import-worker": "docker build -f import-worker/Dockerfile -t franklin-site-status-import-worker:$npm_package_version .",
    "build:docker": "npm run build:docker:server && npm run build:docker:audit-worker && npm run build:docker:import-worker",
    "release": "dotenv -e .env.production -- cross-var \"./scripts/release.sh %npm_package_version%\"",
    "deploy": "dotenv -e .env.production -- cross-var \"./scripts/deploy.sh %npm_package_version%\"",
    "release:deploy": "npm version patch && npm run build:docker && npm run release && npm run deploy",
    "start:dev": "docker-compose -f docker-compose.dev.yaml up",
    "start": "concurrently \"npm run start-server\" \"npm run start-worker\" \"npm run start-import-worker\"",
    "start-server": "cd server && npm start",
    "start-worker": "cd audit-worker && npm start",
    "start-import-worker": "cd import-worker && npm start",
    "docs:build": "npx @redocly/cli build-docs -o ./docs/index.html --config docs/openapi/redocly-config.yaml"
  },
  "devDependencies": {
    "@redocly/cli": "1.0.0-beta.127",
    "cross-var": "1.1.0",
    "dotenv-cli": "6.0.0",
    "concurrently": "6.5.1"
  }
}
